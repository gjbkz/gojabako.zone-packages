{
    "name": "@gjbkz/gojabako.zone-markdown",
    "private": true,
    "version": "0.0.1",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://gojabako.zone"
    },
    "homepage": "https://github.com/gjbkz/gojabako.zone-markdown",
    "repository": "https://github.com/gjbkz/gojabako.zone-markdown",
    "type": "module",
    "scripts": {
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "jest",
        "lint": "eslint --ext .ts,.js packages",
        "build": "npm run build --workspaces",
        "preversion": "ts-node-esm sync-package-json.ts",
        "version": "run-s version:*",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "htmlparser2": "8.0.1",
        "katex": "0.16.0",
        "lowlight": "2.7.0",
        "mdast": "3.0.0",
        "mdast-util-footnote": "1.1.0",
        "mdast-util-from-markdown": "1.2.0",
        "mdast-util-gfm": "2.0.1",
        "micromark-extension-footnote": "1.0.2",
        "micromark-extension-gfm": "2.0.1",
        "postcss": "8.4.16"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.3",
        "@nlib/eslint-config": "3.19.4",
        "@nlib/esmify": "0.3.0",
        "@nlib/githooks": "0.1.0",
        "@nlib/indexen": "0.2.5",
        "@nlib/lint-commit": "0.2.0",
        "@nlib/typing": "0.5.7",
        "@types/eslint": "8.4.6",
        "@types/jest": "28.1.7",
        "@types/katex": "0.14.0",
        "eslint": "8.22.0",
        "eslint-plugin-jest": "26.8.7",
        "jest": "28.1.3",
        "lint-staged": "13.0.3",
        "npm-run-all": "4.1.5",
        "ts-jest": "28.0.8",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    },
    "jest": {
        "roots": [
            "<rootDir>/packages"
        ],
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "node_modules/(?!(mdast-|unist-|micromark|parse-entities|character-entities|ccount|escape-string-regexp|markdown-table|lowlight|fault|decode-named-character-reference))"
        ],
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    },
    "workspaces": [
        "packages/*"
    ]
}

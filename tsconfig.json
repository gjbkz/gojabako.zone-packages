{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
